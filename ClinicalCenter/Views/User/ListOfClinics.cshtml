@model IEnumerable<ClinicalCenter.Entities.Models.Clinic>
<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">

    <title>The HTML5 Herald</title>
    <meta name="description" content="The HTML5 Herald">
    <meta name="author" content="SitePoint">

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/user.css" rel="stylesheet" />

</head>

<body>
    <ul class="nav nav-pills nav-fill">
        <li class="nav-item">
            <a class="nav-link" style="background-color: lightblue" href="https://localhost:44389/UserPage">Profil</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" style="background-color: lightblue" href="https://localhost:44389/HealthCard">Zdravstveni karton </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" style="background-color: lightblue" href="https://localhost:44389/ActiveMedicalExamination">Zakazani pregledi </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="https://localhost:44389/ListOfClinics">Lista klinika u sistemu </a>
        </li>
    </ul>
    <div class="container">
        <br><br>
        <table style="width:100%">
            <thead>
                <tr>
                    <th style="width:20%">Naziv</th>
                    <th style="width:50%">Opis</th>
                    <th style="width:15%">Adresa</th>
                    <th style="width:15%">Grad</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="https://localhost:44389/ClinicPage/@Html.DisplayFor(modelItem => item.Id)">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>
                        </td>
                        <td>
                            <a href="https://localhost:44389/ClinicPage/@Html.DisplayFor(modelItem => item.Id)">
                                @Html.DisplayFor(modelItem => item.Description)
                            </a>
                        </td>
                        <td>
                            <a href="https://localhost:44389/ClinicPage/@Html.DisplayFor(modelItem => item.Id)">
                                @Html.DisplayFor(modelItem => item.Adress)
                            </a>
                        </td>
                        <td>
                            <a href="https://localhost:44389/ClinicPage/@Html.DisplayFor(modelItem => item.Id)">
                                @Html.DisplayFor(modelItem => item.City)
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>